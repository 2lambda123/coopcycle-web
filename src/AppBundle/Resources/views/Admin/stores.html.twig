{% extends "AppBundle::admin.html.twig" %}

{% block breadcrumb %}
<li>{% trans %}adminDashboard.stores.title{% endtrans %}</li>
{% endblock %}

{% block content %}
  <div class="text-right margin-bottom-md">
    <a href="{{ path('admin_store_new') }}" class="btn btn-success">
      <i class="fa fa-plus"></i> {% trans %}adminDashboard.stores.createNew{% endtrans %}
    </a>
  </div>
  {% include "AppBundle:Store:list.html.twig" %}
{% endblock %}

{% block scripts %}
  <script src="{{ asset('js/widgets.js') }}"></script>
  <script>
    document.querySelectorAll('.store-opening-hours').forEach(function(el) {
      new CoopCycle.OpeningHoursParser(el, {
        openingHours: JSON.parse(el.getAttribute('data-opening-hours')),
        locale: $('html').attr('lang')
      })
    })
  </script>
{% endblock %}
