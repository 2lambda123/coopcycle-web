{% set state_label_class = {
  'cart': 'label-warning',
  'new': 'label-primary',
  'accepted': 'label-success',
  'refused': 'label-danger'
} %}
{% set trans_key = 'order.state.' ~ order.state %}
{% set label_class = order.state in state_label_class|keys ? state_label_class[order.state] : 'label-default' %}
<span class="label {{ label_class }}">{{ trans_key|trans }}</span>
