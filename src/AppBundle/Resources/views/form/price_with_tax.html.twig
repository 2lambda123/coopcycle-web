{% block coopcycle_price_with_tax_widget %}
  <div class="row">
    <div class="col-sm-4">
      {{ form_row(form.taxExcluded) }}
    </div>
    <div class="col-sm-4">
      {{ form_row(form.taxIncluded) }}
    </div>
    <div class="col-sm-4">
      {{ form_row(form.taxCategory, { attr: {
        'data-excluded': ('#' ~ form.taxExcluded.vars.id),
        'data-included': ('#' ~ form.taxIncluded.vars.id)
      } }) }}
    </div>
  </div>
{% endblock %}
