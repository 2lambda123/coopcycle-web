/* Custom styles */

{% if primary_color is defined and primary_color is not empty %}
#topnav {
  background-color: {{ primary_color|raw }};
}

#topnav .navbar-brand,
#topnav .navbar-nav > li > a {
	{% if primary_color_is_dark %}
	color: #ffffff;
	{% endif %}
	{% if primary_color_is_light %}
	color: {{ primary_color_darken|raw }};
	{% endif %}
}

#topnav .navbar-nav > .open > a,
#topnav .navbar-nav > .open > a:hover,
#topnav .navbar-nav > .open > a:focus {
	{% if primary_color_is_dark %}
	background-color: {{ primary_color_lighten|raw }};
	{% endif %}
	{% if primary_color_is_light %}
	background-color: {{ primary_color_darken|raw }};
	{% endif %}
}

#topnav .navbar-toggle .icon-bar {
	{% if primary_color_is_dark %}
	background-color: #ffffff;
	{% endif %}
	{% if primary_color_is_light %}
	background-color: {{ primary_color_darken|raw }};
	{% endif %}
}

#topnav .navbar-toggle:hover,
#topnav .navbar-toggle:focus {
	{% if primary_color_is_dark %}
	background-color: {{ primary_color_lighten|raw }};
	{% endif %}
	{% if primary_color_is_light %}
	background-color: {{ primary_color_darken|raw }};
	{% endif %}
}

.banner-title {
	{% if primary_color_is_dark %}
	color: #ffffff;
	{% endif %}
	{% if primary_color_is_light %}
	color: {{ primary_color_darken|raw }};
	{% endif %}
}

.address-autosuggest__container:before {
	background-color: {{ primary_color|raw }};
	{% if primary_color_is_dark %}
	color: #ffffff;
	{% endif %}
	{% if primary_color_is_light %}
	color: {{ primary_color_darken|raw }};
	{% endif %}
}
{% endif %}
