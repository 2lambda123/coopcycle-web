{% extends "@App/admin.html.twig" %}

{% block breadcrumb %}
<li>{% trans %}adminDashboard.tags.title{% endtrans %}</li>
{% endblock %}

{% block content %}
<p class="text-right">
  <a href="{{ path('admin_tag_new') }}" class="btn btn-success">
    <i class="fa fa-plus"></i> {% trans %}basics.add{% endtrans %}
  </a>
</p>
<table class="table">
<thead>
  <th>#</th>
  <th>{% trans %}adminDashboard.organization.name{% endtrans %}</th>
  <th>{% trans %}adminDashboard.organization.users{% endtrans %}</th>
</thead>
<tbody>
{% for organization in organizations %}
<tr>
  <td><a href="{{ path('admin_organization', { id: organization.id }) }}">#{{ organization.id }}</a></td>
  <td>{{ organization.name }}</td>
  <td>{{ organization.users|length }}</td>
</tr>
{% endfor %}
</tbody>
</table>
{% endblock %}
