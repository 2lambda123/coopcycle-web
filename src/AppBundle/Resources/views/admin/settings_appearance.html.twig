{% extends "@App/admin.html.twig" %}

{% form_theme form '@App/form/settings.html.twig' %}

{% block breadcrumb %}
<li>{% trans %}adminDashboard.settings_appearance.title{% endtrans %}</li>
{% endblock %}

{% block content %}
  {{ form_start(form) }}
    <div class="row">
      <div class="col-sm-3">
        <label class="control-label">Logo</label>
        <div id="logo-dropzone"></div>
      </div>
      <div class="col-sm-9">
        {{ form_row(form.primary_color) }}
      </div>
    </div>
    <hr>
    <button type="submit" class="btn btn-block btn-primary">{{ 'basics.save'|trans }}</button>
  {{ form_end(form) }}
  <div id="appearance-settings-form-data"
	  data-action-url="{{ oneup_uploader_endpoint('assets') }}"
	  {% if has_custom_logo %}data-logo-image="{{ asset('images/assets/logo.png') }}"{% endif %}></div>
{% endblock %}

{% block scripts %}
{{ encore_entry_script_tags('js/settings-appearance') }}
{% endblock %}
