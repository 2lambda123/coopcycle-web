{% extends "@App/admin.html.twig" %}

{% block breadcrumb %}
<li>{% trans %}adminDashboard.deliveries.title{% endtrans %}</li>
{% endblock %}

{% block content %}

  <p class="text-right">
    <a href="#" class="btn btn-success" data-toggle="modal" data-target="#choose-store-modal">
      <i class="fa fa-plus"></i> {% trans %}adminDashboard.deliveries.createNew{% endtrans %}
    </a>
  </p>
  <table class="table task-table">
    <thead>
      <th></th>
      <th>#</th>
      <th>{% trans %}adminDashboard.deliveries.type{% endtrans %}</th>
      <th>{% trans %}adminDashboard.deliveries.dueDate{% endtrans %}</th>
      <th>{% trans %}adminDashboard.deliveries.courier{% endtrans %}</th>
      <th>{% trans %}adminDashboard.deliveries.address{% endtrans %}</th>
    </thead>
    <tbody>
    {% for task in tasks %}
      <tr {% if task.cancelled %}class="task--cancelled"{% endif %} {% if task.delivery is not null %}style="border-left-color: {{ task.delivery.color }};"{% endif %}>
        <td width="1%">
          {% include "@App/_partials/task/status_icon.html.twig" %}
        </td>
        <td width="5%">
          <a href="#" data-task="{{ task.id }}">
            #{{ task.id }}
          </a>
        </td>
        <td width="5%">
          {% include "@App/_partials/task/type_label.html.twig" %}
        </td>
        <td width="15%">
          <i class="fa fa-clock-o"></i> {{ task.doneBefore|localizeddate('short', 'short') }}
        </td>
        <td>
        {% if task.assigned %}
          <a href="{{ path('admin_user_details', { username: task.assignedCourier.username }) }}" title="{{ task.assignedCourier.username }}">
            <i class="fa fa-user"></i> {{ task.assignedCourier.username }}
          </a>
        {% endif %}
        </td>
        <td>
          {{ task.address.streetAddress }}
        </td>
      </tr>
    {% endfor %}
    </tbody>
  </table>

  <nav class="text-center">
    {{ knp_pagination_render(tasks) }}
  </nav>

  <div class="modal fade" id="task-edit-modal" tabindex="-1" role="dialog"></div>

  <div class="modal fade" tabindex="-1" role="dialog" aria-labelledby="choose-store-modal-label" id="choose-store-modal">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="choose-store-modal-label">{% trans %}adminDashboard.deliveries.createNew{% endtrans %}</h4>
        </div>
        <div class="modal-body">
          <select class="form-control" id="stores">
            <option></option>
            {% for store in stores %}
            <option value="{{ path(routes.store_new, { id: store.id }) }}">{{ store.name }}</option>
            {% endfor %}
          </select>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">{% trans %}basics.cancel{% endtrans %}</button>
        </div>
      </div>
    </div>
  </div>

{% endblock %}

{% block scripts %}
<script>
window.AppData = window.AppData || {};
window.AppData.Delivery = {
  taskModalURL: "{{ path('admin_task', { id: '__TASK_ID__' }) }}"
};
</script>
<script>
$('#stores').on('change', function(e) {
  window.location.href = $(this).val();
});
</script>
{{ encore_entry_script_tags('js/task-modal') }}
{{ encore_entry_script_tags('js/delivery-list') }}
<script src="https://maps.googleapis.com/maps/api/js?key={{ coopcycle_setting('google_api_key') }}&libraries=places"
  async defer></script>
{% endblock %}
