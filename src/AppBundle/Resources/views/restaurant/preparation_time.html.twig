{% extends '@App/restaurant/layout.html.twig' %}

{% form_theme form '@App/form/preparation_time.html.twig' %}

{% block breadcrumb %}
  <li><a href="{{ path(restaurants_route) }}">{% trans %}adminDashboard.restaurants.title{% endtrans %}</a></li>
  <li><a href="{{ path(restaurant_route, { id: restaurant.id }) }}">{{ restaurant.name }}</a></li>
  <li>{% trans %}restaurant.list.preparationTime{% endtrans %}</li>
{% endblock %}

{% block content %}

{{ form_start(form) }}
  {{ form_row(form.preparationTimeRules) }}
  <div class="text-right">
    <button type="button" class="btn btn-success" id="add-rule">{{ 'basics.add'|trans }}</button>
  </div>
  <hr>
  <button type="submit" class="btn btn-block btn-primary">{{ 'basics.save'|trans }}</button>
{{ form_end(form) }}

{% endblock %}

{% block scripts %}
{{ encore_entry_script_tags('js/restaurant-preparation-time') }}
{% endblock %}
