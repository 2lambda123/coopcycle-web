<div class="alert alert-info">
{{ 'restaurant.embed.disclaimer'|trans }}
</div>

<div class="mb-5">
  <p>{% trans %}restaurant.embed.step_1{% endtrans %}</p>
  <pre><code class="language-html">{{ ('<script src="' ~ absolute_url('/js/coopcycle.org') ~ '"></script>')|e }}</code></pre>
</div>

<div class="mb-5">
  <p>{% trans with { '%url%':
    url('restaurant', { id: restaurant.id, slug: restaurant.name|slugify })
  } %}restaurant.embed.step_2{% endtrans %}</p>
  <pre><code class="language-html">{{ ('<button type="button" data-coopcycle-embed="' ~ url('restaurant', { id: restaurant.id, slug: restaurant.name|slugify }) ~  '">\nOrder now\n</button>')|e }}</code></pre>
</div>

<p>{{ 'restaurant.embed.greeting'|trans }}</p>
